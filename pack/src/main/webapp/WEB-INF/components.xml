<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!-- import the hibernate related beans -->
	<import resource="spring-hibernate.xml" />

	<bean id="ca.hec.opensyllabus2.api.Syllabus2Service"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">

		<property name="transactionManager"
			ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
		<property name="target">
			<bean class="ca.hec.opensyllabus2.impl.Syllabus2ServiceImpl">
				<!-- API injection -->
				<property name="syllabusDao" ref="ca.hec.opensyllabus2.api.dao.Syllabus2Dao" />
		 		<property name="templateService" ref="ca.hec.opensyllabus2.api.TemplateService" />
		 		<property name="sakaiProxy" ref="ca.hec.opensyllabus2.api.SakaiProxy" />
		 		<property name="securityService" ref="ca.hec.opensyllabus2.api.Syllabus2SecurityService" />
		 	</bean>

		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="createOrUpdateSyllabus">PROPAGATION_REQUIRED</prop>
			</props>
		</property>

	</bean>

	<bean id="ca.hec.opensyllabus2.api.TemplateService"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">

		<property name="transactionManager"
			ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
		<property name="target">
			<bean class="ca.hec.opensyllabus2.impl.TemplateServiceImpl">
				<!-- API injection -->
		 		<property name="templateDao" ref="ca.hec.opensyllabus2.api.dao.TemplateDao" />
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="createOrUpdateSyllabus">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<bean id="ca.hec.opensyllabus2.api.Syllabus2SecurityService"
		class="ca.hec.opensyllabus2.impl.Syllabus2SecurityServiceImpl">
 		<property name="sakaiProxy" ref="ca.hec.opensyllabus2.api.SakaiProxy" />
	</bean>
	
    <bean name="ca.hec.opensyllabus2.api.SakaiProxy"
        class="ca.hec.opensyllabus2.impl.SakaiProxyImpl" init-method="init" singleton="true">
<!--         <property name="courseManagementService"><ref bean="org.sakaiproject.coursemanagement.api.CourseManagementService"/></property> -->
<!--         <property name="groupProvider"><ref bean="org.sakaiproject.authz.api.GroupProvider"/></property> -->
<!--         <property name="privacyManager"><ref bean="org.sakaiproject.api.privacy.PrivacyManager"/></property> -->
<!--         <property name="connectionsLogic"><ref bean="org.sakaiproject.profile2.logic.ProfileConnectionsLogic"/></property> -->
<!--         <property name="serverConfigurationService"><ref bean="org.sakaiproject.component.api.ServerConfigurationService"/></property> -->
        <property name="securityService"><ref bean="org.sakaiproject.authz.api.SecurityService"/></property>
        <property name="eventTrackingService"><ref bean="org.sakaiproject.event.api.EventTrackingService"/></property>
        <property name="sessionManager"><ref bean="org.sakaiproject.tool.api.SessionManager"/></property>
        <property name="siteService"><ref bean="org.sakaiproject.site.api.SiteService"/></property>
        <property name="toolManager"><ref bean="org.sakaiproject.tool.api.ToolManager"/></property>
        <property name="functionManager"><ref bean="org.sakaiproject.authz.api.FunctionManager"/></property>
        <property name="userDirectoryService"><ref bean="org.sakaiproject.user.api.UserDirectoryService"/></property>
    </bean>
    
 
</beans>
