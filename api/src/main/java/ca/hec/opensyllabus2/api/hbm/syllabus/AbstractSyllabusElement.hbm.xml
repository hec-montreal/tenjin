<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ca.hec.opensyllabus2.api.model.syllabus"
	default-lazy="false" default-cascade="none">
	<class
		name="ca.hec.opensyllabus2.api.model.syllabus.AbstractSyllabusElement"
		table="OSYL2_SYLLABUSELEMENT" discriminator-value="0">

		<id name="id" type="long">
			<column name="SYLLABUSELEMENT_ID" />
			<generator class="native">
				<param name="sequence">SYLLABUSELEMENT_ID_SEQ</param>
			</generator>
		</id>

		<discriminator>
			<column name="CLASS_TYPE" not-null="true" length="100" />
		</discriminator>

		<property name="syllabusId" type="long">
			<column name="SYLLABUS_ID" />
		</property>

		<property name="parentId" type="long">
			<column name="PARENT_ID" />
		</property>

		<property name="templateStructureId" type="long">
			<column name="TEMPLATESTRUCTURE_ID" />
		</property>

		<property name="title" type="string">
			<column name="TITLE" />
		</property>

		<property name="description" type="materialized_clob">
			<column name="DESCRIPTION" />
		</property>

		<property name="publicElement" type="boolean">
			<column name="PUBLIC_ELEMENT" />
		</property>

		<property name="shareable" type="boolean">
			<column name="SHAREABLE" />
		</property>

		<property name="important" type="boolean">
			<column name="IMPORTANT" />
		</property>

		<property name="availabilityStartDate" column="AVAILABILITY_START_DATE"
			type="java.util.Date" not-null="true" />

		<property name="availabilityEndDate" column="AVAILABILITY_END_DATE"
			type="java.util.Date" />

		<property name="createdDate" column="CREATED_DATE"
			type="java.util.Date" />

		<property name="createdBy" column="CREATED_BY" type="string" />

		<property name="lastModifiedDate" column="LAST_MODIFIED_DATE"
			type="java.util.Date" />

		<property name="lastModifiedBy" column="LAST_MODIFIED_BY" type="string" />

		<map name="attributes" table="OSYL2_SYLLABUSELEMENTATTRIBUTE" cascade="all">
			<key column="SYLLABUSELEMENT_ID" />
			<map-key column="name" type="string" />
			<element column="value" type="materialized_clob" />
		</map>

		<set name="sections" table="OSYL2_SYLLABUSELEMENTSECTION" cascade="all">
			<key column="SYLLABUSELEMENT_ID" />
			<element column="SECTION" type="string" />
		</set>

		<property name="displayOrder" type="int">
			<column name="DISPLAY_ORDER"/>
		</property>
	</class>
</hibernate-mapping>
