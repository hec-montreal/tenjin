<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
	<class name="ca.hec.opensyllabus2.api.model.template.Template" table="OSYL2_TEMPLATE">
		<id name="id" type="long" column="TEMPLATE_ID">
	    	<generator class="native">
                 <param name="sequence">TEMPLATE_ID_SEQ</param>
        	</generator>
		</id>
		<property name="title" type="string" column="TITLE" length="99" not-null="true"/>
		<property name="description" type="materialized_clob" column="DESCRIPTION" length="100"/>
		<property name="active" type="boolean" column="ACTIVE" not-null="true"/>
		<list name="elements">
			<key column="TEMPLATE_ID"/>
			<list-index column="DISPLAY_ORDER"/>
			<one-to-many class="ca.hec.opensyllabus2.api.model.template.TemplateStructure"/>
		</list>
     </class>
</hibernate-mapping>
