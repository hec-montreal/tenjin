<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.template.Rubric" table="OSYL2_RUBRIC">
        <id name="rubric_id" type="long">
            <column name="RUBRIC_ID" />
            <generator class="native">
            	<param name="sequence">osyl2_RUBRIC_ID</param>
            </generator>
        </id>
        <property name="label" type="string">
            <column name="LABEL" />
        </property>
        
       <set name="syllabusStructures" table="OSYL2_SYLLABUSSTRUCTURE" 
		inverse="true" lazy="true" fetch="select">
          <key>
              <column name="RUBRIC_ID" not-null="true" />
          </key>
          <one-to-many class="ca.hec.opensyllabus2.api.model.syllabus.SyllabusStructure" />
      </set>
        
    </class>
</hibernate-mapping>
