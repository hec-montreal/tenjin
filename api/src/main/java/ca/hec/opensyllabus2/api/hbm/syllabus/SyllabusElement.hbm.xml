<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.syllabus.SyllabusElement" table="OSYL2_SYLLABUSELEMENT">
        <id name="syllabusElement_id" type="long" >
            <column name="SYLLABUSELEMENT_ID" />
            <generator class="native">
            	<param name="sequence">SYLLABUSELEMENT_ID_SEQ</param>
            </generator>
        </id>
        <property name="parent" type="long" >
            <column name="parent" />
       </property>

        <property name="shareable" type="boolean">
            <column name="SHAREABLE" />
        </property>

       <property name="lastModifiedDate" column="LASTMODIFIEDDATE" type="java.util.Date" />

       <property name="studentAvailability" column="STUDENTAVAILABILITY" type="java.util.Date" />


        <property name="publicElement" type="boolean">
            <column name="PUBLICELEMENT" />
        </property>
        
        <property name="displayPage" type="boolean">
            <column name="DISPLAYPAGE" />
        </property>
        
        <property name="lastModifiedBy" type="string">
            <column name="LASTMODIFIEDBY" />
        </property>
 
        <property name="displayOrder" type="long" >
            <column name="DISPLAYORDER" />
        </property>
 
       <set name="elementAttributes" table="OSYL2_SYLLABUSELEMENTATTRIBUTE" cascade="all" lazy="false" >
            <key>
                <column name="SYLLABUSELEMENT_ID"  />
            </key>
            <one-to-many class="ca.hec.opensyllabus2.api.model.syllabus.SyllabusElementAttribute" />
        </set>

           <set name="children" table="OSYL2_SYLLABUSELEMENT" lazy="false" order-by="displayOrder">
            <key>
                <column name="parent"  />
            </key>
            <one-to-many class="ca.hec.opensyllabus2.api.model.syllabus.SyllabusElement" />
        </set> 

        <set name="elementSections" table="OSYL2_SYLLABUSELEMENTSECTION" cascade="all" lazy="false" >
            <key>
                <column name="SYLLABUSELEMENT_ID" not-null="true" />
            </key>
            <one-to-many class="ca.hec.opensyllabus2.api.model.syllabus.SyllabusElementSection" />
       </set>
       
       <many-to-one name="rubric" class="ca.hec.opensyllabus2.api.model.template.Rubric" >
            <column name="RUBRIC_ID" not-null="false" />
        </many-to-one>
        
        <many-to-one name="templateElement" class="ca.hec.opensyllabus2.api.model.template.TemplateElement" >
            <column name="TEMPLATEELEMENT_ID" not-null="true" />
        </many-to-one> 
       
       <many-to-one name="syllabus" class="ca.hec.opensyllabus2.api.model.syllabus.Syllabus" >
            <column name="SYLLABUS_ID"  />
        </many-to-one>
    </class>
</hibernate-mapping>
