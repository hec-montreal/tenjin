<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.syllabus.SyllabusElementSection" table="OSYL2_SYLLABUSELEMENTSECTION">
       <id name="elementSection_id" type="long">
            <column name="ELEMENTSECTION_ID" />
            <generator class="native">
            	<param name="sequence">ELEMENTSECTION_ID_SEQ</param>
            </generator>
        </id>
        <property name="section_id" type="string">
            <column name="SECTION_ID" />
        </property>

        <many-to-one name="syllabusStructure_id" class="ca.hec.opensyllabus2.api.model.syllabus.SyllabusStructure" fetch="select">
            <column name="SYLLABUSSTRUCTURE_ID" not-null="true" />
        </many-to-one>
  
    </class>
</hibernate-mapping>
