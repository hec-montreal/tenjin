<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.syllabus.SyllabusStructure" table="OSYL2_SYLLABUSSTRUCTURE">
        <id name="syllabusStructure_id" type="long" >
            <column name="SYLLABUSSTRUCTURE_ID" />
            <generator class="native">
            	<param name="sequence">SYLLABUSSTRUCTURE_ID_SEQ</param>
            </generator>
        </id>
        <property name="parent_id" type="long" >
            <column name="PARENT_ID" />
       </property>
 
        <property name="shareable" type="boolean">
            <column name="SHAREABLE" />
        </property>
       
       <property name="lastModifiedDate" column="LASTMODIFIEDDATE" type="java.util.Date" />
       
       <property name="studentAvailability" column="STUDENTAVAILABILITY" type="java.util.Date" />
        
        
        <property name="publicElement" type="boolean">
            <column name="PUBLICELEMENT" />
        </property>
        <property name="lastModifiedBy" type="string">
            <column name="LASTMODIFIEDBY" />
        </property>
         <property name="displayOrder" type="long" >
            <column name="DISPLAYORDER" />
        </property>
        
        <set name="elementAttributes" table="OSYL2_SYLLABUSELEMENTATTRIBUTE" 
				inverse="true" lazy="true" fetch="select">
            <key>
                <column name="SYLLABUSSTRUCTURE_ID" not-null="true" />
            </key>
            <one-to-many class="ca.hec.opensyllabus2.api.model.syllabus.SyllabusElementAttribute" />
        </set>
        
       <set name="elementSections" table="OSYL2_SYLLABUSELEMENTSECTION" 
				inverse="true" lazy="true" fetch="select">
            <key>
                <column name="SYLLABUSSTRUCTURE_ID" not-null="true" />
            </key>
            <one-to-many class="ca.hec.opensyllabus2.api.model.syllabus.SyllabusElementSection" />
        </set>
        
        <many-to-one name="rubric_id" class="ca.hec.opensyllabus2.api.model.template.Rubric" fetch="select">
            <column name="RUBRIC_ID" not-null="false" />
        </many-to-one>

        <many-to-one name="templateStructure_id" class="ca.hec.opensyllabus2.api.model.template.TemplateStructure" fetch="select">
            <column name="TEMPLATESTRUCTURE_ID" not-null="true" />
        </many-to-one>
        
        <many-to-one name="syllabus_id" class="ca.hec.opensyllabus2.api.model.syllabus.Syllabus" fetch="select">
            <column name="SYLLABUS_ID" not-null="true" />
        </many-to-one>

    </class>
</hibernate-mapping>
