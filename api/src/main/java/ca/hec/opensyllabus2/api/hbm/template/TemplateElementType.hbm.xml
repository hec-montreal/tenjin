<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.template.TemplateElementType" table="OSYL2_TEMPLATEELEMENTTYPE">
    
        <id name="elementType_id" type="long">
            <column name="ELEMENTTYPE_ID" />
            <generator class="native">
                 <param name="sequence">ELEMENTTYPE_ID_SEQ</param>
        	</generator>
        </id>
        <property name="title" type="string">
            <column name="TITLE" />
        </property>
        <property name="description" type="text" length="100">
            <column name="DESCRIPTION" />
        </property>
    </class>
</hibernate-mapping>
