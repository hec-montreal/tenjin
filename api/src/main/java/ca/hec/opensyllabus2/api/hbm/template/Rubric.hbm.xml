<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.template.Rubric" table="OSYL2_RUBRIC">
        <id name="id" type="long">
            <column name="RUBRIC_ID" />
            <generator class="native">
            	<param name="sequence">OSYL2_RUBRIC_ID</param>
            </generator>
        </id>
        <property name="label" type="string">
            <column name="LABEL" />
        </property>
        
          <set name="syllabusStructures" table="OSYL2_SYLLABUSSTRUCTURE"
			cascade="all"  lazy="false" fetch="join">
	          <key>
	              <column name="SYLLABUS_ID" not-null="true" />
	          </key>
	          <one-to-many class="ca.hec.opensyllabus2.api.model.syllabus.SyllabusStructure" />
	      </set>
        <set name="templateElements" lazy="false">
			<key column="TEMPLATE_ID"/>
			<one-to-many class="ca.hec.opensyllabus2.api.model.template.TemplateElement"/>
		</set>
		
    </class>
</hibernate-mapping>
