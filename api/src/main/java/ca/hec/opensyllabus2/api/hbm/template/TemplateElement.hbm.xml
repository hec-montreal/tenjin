<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class name="ca.hec.opensyllabus2.api.model.template.TemplateElement" table="OSYL2_TEMPLATEELEMENT">
        <id name="id" type="long">
            <column name="TEMPLATEELEMENT_ID" />
            <generator class="native">
                 <param name="sequence">TEMPLATEELEMENT_ID_SEQ</param>
        	</generator>
        </id>
        <map name="labels" table="OSYL2_TEMPLATEELEMENT_I18NLABEL">
			<key column="TEMPLATEELEMENT_ID" />
			<map-key column="locale" type="string" />
			<element column="label" type="string" />
	    </map>
        <many-to-one name="type" column="TEMPLATEELEMENTTYPE_ID"
            class="ca.hec.opensyllabus2.api.model.template.TemplateElementType"/>
    </class>
</hibernate-mapping>
