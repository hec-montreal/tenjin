<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.template.TemplateElement" table="OSYL2_TEMPLATEELEMENT">
        <id name="templateElement_id" type="long">
            <column name="TEMPLATEELEMENT_ID" />
            <generator class="native">
                 <param name="sequence">TEMPLATEELEMENT_ID_SEQ</param>
        	</generator>
        </id>
        <many-to-one name="type" column="ELEMENTTYPE_ID"
            class="ca.hec.opensyllabus2.api.model.template.TemplateElementType"/>
        <property name="mandatory" type="boolean" not-null="true">
            <column name="MANDATORY" />
        </property>
        <property name="displayOrder" type="int" not-null="true">
            <column name="DISPLAY_ORDER" />
        </property>
        <set name="childElements">
            <key column="PARENT_ID"/>
            <one-to-many class="ca.hec.opensyllabus2.api.model.template.TemplateElement"/>
        </set>
    </class>
</hibernate-mapping>
