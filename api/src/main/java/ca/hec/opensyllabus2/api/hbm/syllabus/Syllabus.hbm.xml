<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">



<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.syllabus.Syllabus" table="OSYL2_SYLLABUS">
        <id name="syllabus_id" type="long">
            <column name="SYLLABUS_ID" />
            <generator class="native">
            	<param name="sequence">SYLLABUS_ID_SEQ</param>
            </generator>
        </id>
        <property name="course_id" type="string">
            <column name="COURSE_ID" />
        </property>
        <property name="courseTitle" type="string">
            <column name="COURSETITLE" />
        </property>
        <property name="locale" type="string">
            <column name="LOCALE" />
        </property>
        <property name="createdBy" type="string">
            <column name="CREATEDBY" />
        </property>
        <property name="creationDate" type="java.util.Date">
         	<column name="CREATIONDATE" />
        </property>

       <!--  <many-to-one name="template" column="TEMPLATE_ID"
        	class="ca.hec.opensyllabus2.api.model.template.Template" not-null="true"/>
 -->
        <set name="syllabusStructures" table="OSYL2_SYLLABUSSTRUCTURE"
			cascade="all"  lazy="false" fetch="join">
	          <key>
	              <column name="SYLLABUS_ID" not-null="true" />
	          </key>
	          <one-to-many class="ca.hec.opensyllabus2.api.model.syllabus.SyllabusStructure" />
	      </set>

    </class>
</hibernate-mapping>
