<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
	<class name="ca.hec.opensyllabus2.api.model.syllabus.Syllabus"
		table="TENJ_SYLLABUS">
		<id name="id" type="long">
			<column name="SYLLABUS_ID" />
			<generator class="native">
				<param name="sequence">SYLLABUS_ID_SEQ</param>
			</generator>
		</id>
		<property name="siteId" type="string">
			<column name="SITE_ID" />
		</property>
		<!--  TODO: probably better to get this from web service -->
		<property name="courseTitle" type="string">
			<column name="COURSE_TITLE" />
		</property>
		<property name="title" type="string">
			<column name="TITLE" />
		</property>
		<property name="templateId" type="long">
			<column name="TEMPLATE_ID" />
		</property>
		<property name="locale" type="string">
			<column name="LOCALE" />
		</property>
		<property name="shareable" type="boolean">
			<column name="SHAREABLE" />
		</property>
		<property name="createdBy" type="string">
			<column name="CREATED_BY" />
		</property>
		<property name="createdDate" type="java.util.Date">
			<column name="CREATED_DATE" />
		</property>
		<property name="lastModifiedBy" type="string">
			<column name="LAST_MODIFIED_BY" />
		</property>
		<property name="lastModifiedDate" type="java.util.Date">
			<column name="LAST_MODIFIED_DATE" />
		</property>
		<set name="sections" table="TENJ_SYLLABUSSECTION" cascade="all">
			<key column="SYLLABUS_ID" />
			<element column="SECTION" type="string" />
		</set>
		
	</class>
</hibernate-mapping>
