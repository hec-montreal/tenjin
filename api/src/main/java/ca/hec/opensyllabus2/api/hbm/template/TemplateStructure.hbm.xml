<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.template.TemplateStructure" table="OSYL2_TEMPLATESTRUCTURE">
       <id name="templateStructure_id" type="long" >
            <column name="TEMPLATESTRUCTURE_ID" />
            <generator class="native">
                 <param name="sequence">TEMPLATESTRUCTURE_ID_SEQ</param>
        	</generator>
        </id>
        <property name="parent_id" type="long">
            <column name="PARENT_ID" />
        </property>
         <property name="templateElement_id" type="long" >
            <column name="TEMPLATEELEMENT_ID" />
        </property>
        <property name="template_id" type="long" >
            <column name="TEMPLATE_ID" />
        </property>
        <property name="mandatory" type="boolean" >
            <column name="MANDATORY" />
        </property>
        <property name="displayOrder" type="long" >
            <column name="DISPLAYORDER" />
        </property>
    </class>
</hibernate-mapping>
