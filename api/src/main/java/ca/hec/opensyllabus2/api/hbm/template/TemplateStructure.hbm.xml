<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.hec.opensyllabus2.api.model.template.TemplateStructure" table="OSYL2_TEMPLATESTRUCTURE">
        <id name="id" type="long">
            <column name="TEMPLATESTRUCTURE_ID" />
            <generator class="native">
                 <param name="sequence">TEMPLATESTRUCTURE_ID_SEQ</param>
        	</generator>
        </id>

        <property name="mandatory" type="boolean" not-null="true">
            <column name="MANDATORY" />
        </property>

        <property name="displayOrder" type="int" not-null="true">
            <column name="DISPLAY_ORDER" />
        </property>

        <many-to-one name="templateElement" column="TEMPLATEELEMENT_ID" lazy="false"
            class="ca.hec.opensyllabus2.api.model.template.TemplateElement"/>

        <set name="elements" lazy="false">
            <key column="PARENT_ID"/>
            <one-to-many class="ca.hec.opensyllabus2.api.model.template.TemplateStructure"/>
        </set>

        <set name="rubrics" table="OSYL2_TEMPLATESTRUCTURE_RUBRIC" lazy="false">
            <key column="TEMPLATESTRUCTURE_ID"/>
            <many-to-many class="ca.hec.opensyllabus2.api.model.template.Rubric">
            	<column name="RUBRIC_ID"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
